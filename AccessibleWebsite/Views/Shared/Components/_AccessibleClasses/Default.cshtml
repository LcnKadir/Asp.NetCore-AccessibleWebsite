<section class="classes-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>HAFTANIN DERSLERİ</h2>
                    <hr style="width: 50%; margin-top: 10px;">
                </div>
            </div>
        </div>
        <div class="row classes-slider owl-carousel">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-class-item set-bg" data-setbg="/ClassImage/@item.Image">
                        <div class="si-text">
                            <h4>@item.Name</h4>
                            <span><i class="fa fa"></i>@item.Day | @(((DateTime)item.StartClass).ToString(" HH:mm"))-@(((DateTime)item.FinishClass).ToString("HH:mm"))</span>
                            <br>
                            <span><i class="fa fa-user"></i>@item.AppUser.Name @item.AppUser.Surname</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
