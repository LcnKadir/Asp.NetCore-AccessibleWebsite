@model List<Blog>

<section class="latest-blog-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Son Bloglar</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog-item">
                        <img src="/BlogImages/@item.CoverImage" alt="">
                        <div class="blog-widget">
                            <div class="bw-date"></div>
                            @*    <a href="/Blogs/@item.CategoryId" class="tag">#@item.Category.Name</a> *@
                        </div>
                        <h4><a href="/Blogs/BlogDetails/@item.Id">@item.LoginTitle</a></h4>
                    </div>
                </div>
            }
        </div>
    </div>
</section>