@model List<Blog>

<section class="latest-blog-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Son Bloglar</h2>
                    <hr style="width: 50%; margin-top: 10px;">
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog-item larger-blog">
                        <img src="/BlogImages/@item.CoverImage" alt="">
                        <div class="blog-widget">
                            <div class="bw-date"></div>
                            <a asp-controller="Blogs" asp-action="Index" asp-route-id="@item.CategoryId" class="tag">#@item.Category.Name</a>
                        </div>
                        <h4><a href="/Blogs/BlogDetails/@item.Id">@item.LoginTitle</a></h4>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
