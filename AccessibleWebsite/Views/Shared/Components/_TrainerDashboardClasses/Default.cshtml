@model List<Class>

<div class="flex flex-1 flex-col md:flex-row lg:flex-row mx-2">
    <div class="rounded overflow-hidden shadow bg-white mx-2 w-full">
        <div class="px-6 py-2 border-b border-light-grey">
            <div class="font-bold text-xl">Haftalık Derslere Katılım Oranları</div>
        </div>
        <div class="table-responsive">
            <table class="table text-grey-darkest">
                <thead class="bg-grey-dark text-white text-normal">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Ders</th>
                        <th scope="col">Antrenör</th>
                        <th scope="col">Gün</th>
                        <th scope="col">Katılım Oranı</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                                <button class="@(i % 2 == 0 ? "bg-blue-500 hover:bg-blue-800" : "bg-primary hover:bg-primary-dark") text-white font-light py-1 px-2 rounded-full">
                                    @Model[i].Name
                                </button>
                            </td>
                            <td>@Model[i].AppUser.Name @Model[i].AppUser.Surname</td>
                            <td>@Model[i].Day</td>
                            <td>
                                <span class="text-green-500"><i class="fas fa-arrow-up"></i> @(i + 5)%</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
