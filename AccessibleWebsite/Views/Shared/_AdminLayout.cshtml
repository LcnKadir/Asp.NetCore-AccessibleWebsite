﻿@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa; 
            color: #343a40; 
        }

        header {
            background-color: #343a40; 
            color: #fff; 
            position: fixed; 
            top: 0; 
            left: 0; 
            width: 100%; 
            z-index: 1000; 
            text-align: right; 
            padding: 10px 20px; 
        }

        .sidebar {
            background-color: #f0f0f0; 
            color: #000; 
            position: fixed; 
            top: 60px;
            left: 0; 
            bottom: 0; 
            width: 250px; 
            padding-top: 1rem; 
            padding-bottom: 1rem; 
        }

        .sidebar-heading {
            color: #000; 
            margin-bottom: 1rem; 
        }

        .nav-link {
            color: #000 !important; 
        }

            .nav-link:hover {
                text-decoration: none; 
            }

        .nav-item {
            padding-top: 0.5rem; 
            padding-bottom: 0.5rem; 
        }

            .nav-item:not(:last-child) {
                border-bottom: 1px solid #ccc; 
            }

        .main-content {
            margin-left: 250px; 
            padding-top: 100px; 
            padding-bottom: 50px; 
        }

        footer {
            background-color: #343a40; 
            color: #fff; 
            text-align: center; 
            padding: 10px 0; 
            position: fixed; 
            bottom: 0; 
            width: 100%; 
        }
    </style>
</head>
<body>

    @await Html.PartialAsync("~/Views/AdminPartial/_HeaderPartial.cshtml")


    @await Html.PartialAsync("~/Views/AdminPartial/_SideBarPartial.cshtml")


    <div class="main-content">
        @RenderBody()
    </div>

    @await Html.PartialAsync("~/Views/AdminPartial/_FooterPartial.cshtml")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>