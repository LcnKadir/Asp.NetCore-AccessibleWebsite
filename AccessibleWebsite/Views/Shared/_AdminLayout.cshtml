@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa; /* Arka plan rengi */
            color: #343a40; /* Yazı rengi */
        }

        header {
            background-color: #343a40; /* Header arka plan rengi */
            color: #fff; /* Header yazı rengi */
            position: fixed; /* Header sabit pozisyon */
            top: 0; /* Sayfanın üstünde */
            left: 0; /* Sayfanın solunda */
            width: 100%; /* Header genişliği */
            z-index: 1000; /* Header'ı en önde tut */
            text-align: right; /* Yazıyı sağa yasla */
            padding: 10px 20px; /* Yazı içeriğine boşluk ekle */
        }

        .sidebar {
            background-color: #f0f0f0; /* Kenar çubuğu arka plan rengi (açık gri) */
            color: #000; /* Kenar çubuğu yazı rengi (siyah) */
            position: fixed; /* Kenar çubuğu sabit pozisyon */
            top: 60px; /* Header'ın altında */
            left: 0; /* Sayfanın solunda */
            bottom: 0; /* Sayfanın altında */
            width: 250px; /* Kenar çubuğu genişliği */
            padding-top: 1rem; /* Üst boşluk */
            padding-bottom: 1rem; /* Alt boşluk */
        }

        .sidebar-heading {
            color: #000; /* Kenar çubuğu başlık yazı rengi (siyah) */
            margin-bottom: 1rem; /* Kenar çubuğu başlık altındaki boşluk */
        }

        .nav-link {
            color: #000 !important; /* Kenar çubuğu bağlantı yazı rengi (siyah) */
        }

            .nav-link:hover {
                text-decoration: none; /* Kenar çubuğu bağlantılarında hover durumunda alt çizgiyi kaldır */
            }

        .nav-item {
            padding-top: 0.5rem; /* Kenar çubuğu bağlantılar arası boşluk */
            padding-bottom: 0.5rem; /* Kenar çubuğu bağlantılar arası boşluk */
        }

            .nav-item:not(:last-child) {
                border-bottom: 1px solid #ccc; /* Kenar çubuğu bağlantılar arası çizgi */
            }

        .main-content {
            margin-left: 250px; /* Kenar çubuğu genişliği kadar sağa kaydır */
            padding-top: 100px; /* Header yüksekliği kadar içeriğin üstüne boşluk bırak */
            padding-bottom: 50px; /* Footer yüksekliği kadar içeriğin altına boşluk bırak */
        }

        footer {
            background-color: #343a40; /* Footer arka plan rengi */
            color: #fff; /* Footer yazı rengi */
            text-align: center; /* Yazıların ortalanması */
            padding: 10px 0; /* Footer içerik paddingi */
            position: fixed; /* Footer sabit pozisyon */
            bottom: 0; /* Sayfanın altında */
            width: 100%; /* Footer genişliği */
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header class="py-3">
        <div class="container">
            <h1 class="m-0 text-end">Admin Paneli</h1>
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="py-4 sidebar">
        <div class="container">
            <h4 class="sidebar-heading">Menü</h4>
            <ul class="nav flex-column">
                <li class="nav-item"><a href="#" class="nav-link">Antrenörler</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Dersler</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Antrenmanlar</a></li>
            </ul>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="py-3">
        <div class="container">
            <p class="m-0">© 2024 Admin Paneli</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
