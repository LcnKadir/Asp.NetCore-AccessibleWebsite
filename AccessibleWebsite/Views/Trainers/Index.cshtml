@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/IULayout.cshtml";
}
<section class="trainer-section about-trainer spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>ANTRENÖRLER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="single-trainer-item">
                        <img src="/TrainersImages/@item.ImageUrl" alt="" class="trainer-img">
                        <div class="trainer-text">
                            @if (item.TrainerId != null)
                            {
                                <h5>@item.Name @item.Surname</h5>
                                <span>@item.Branch</span>
                                <p class="trainer-description">@item.Description</p>
                                <div class="trainer-social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                </div>
                            }
                            else
                            {
                                <p>Henüz Antrenör Eklenmedi.</p>
                            }
                            <hr>
                            <a href="/Trainers/GetTraining/@item.Id" class="primary-btn membership-btn">İletişime Geç</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

