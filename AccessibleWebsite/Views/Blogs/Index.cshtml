@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/IULayout.cshtml";
}

<body>
    <section class="breadcrumb-section set-bg" data-setbg="~/Gym/img/breadcrumb/classes-breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>Blog</h2>
                        <div class="breadcrumb-option">
                            <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                            <span>Blog</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="row">
        <div class="col-lg-12">
            @foreach (var item in Model)
            {
                <ul class="gallery-controls">
                    
                    <li> class="active" data-filter=".all">Tüm Bloglar</li>

                    @if (item.Title == "Powerlifter")
                    {
                        <li> data-filter=".fitness">PowerLifter</li>
                    }
                    @if (item.Title == "CrossFit")
                    {
                    <li data-filter=".coaching">CrossFit</li>
                    }
                    <li data-filter=".event">Yoga</li>
                    <li data-filter=".event">Plates</li>
                    <li data-filter=".other">Boks</li>
                </ul>
            }
        </div>
    </div>

    <section class="blog-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog-item">
                        @foreach (var item in Model)
                        {
                            <img src="@item.CoverImage" alt="">
                            <div class="blog-widget">
                                <div class="bw-date">@item.CreateDate</div>
                                <a href="#" class="tag">#Gym</a>
                            </div>
                            <h4><a href="/Blogs/BlogDetails/@item.Id">@item.LoginTitle</a></h4>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>

