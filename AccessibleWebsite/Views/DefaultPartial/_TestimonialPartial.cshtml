@model List<Story>

<section class="testimonial-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>BAŞARI HİKAYELERİNİZ</h2>
                </div>
            </div>
        </div>
        <div class="s" style="text-align: center; margin-top: 20px;">
            <hr style="width: 50%; margin-top: 10px;">
            <h6>Başarı hikayelerinizi İletişim sayfamızdan bizimle paylaşabilirsiniz!</h6>
            <hr style="width: 50%; margin-top: 10px;">
        </div>
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="testimonial-slider owl-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="testimonial-item">
                            <p style="white-space: pre-line;">
                                @item.Description
                            </p>
                            <div class="ti-pic">
                                <img src="/MemberImages/@item.AppUser.ImageUrl" alt="">
                                <div class="quote">
                                    <img src="~/Gym/img/testimonial/quote-left.png" alt="">
                                </div>
                            </div>
                            <div class="ti-author">
                                <h4>@item.AppUser.Name @item.AppUser.Surname</h4>
                                <span>Üye</span>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>