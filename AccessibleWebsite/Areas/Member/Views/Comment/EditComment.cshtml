@model Comment
@{
    ViewData["Title"] = "EditComment";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<form method="post" asp-controller="Comment" asp-action="EditComment" >
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="flex flex-wrap -mx-3 mb-6 px-3">
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                <input class="form-group"
                       id="grid-last-name" type="text" value="@ViewBag.userId">
            </div>
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white-500"
                       id="grid-last-name" type="text" value="@ViewBag.BlogId">
            </div>
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">

                @Html.Label("Yorumu Düzenle")
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white-500"
                      id="grid-last-name" type="text" asp-for="CommentContent">
            </div>
        </div>
        <button class="btn btn-outline-primary">Düzenle</button>
    </div>
</form>
