@model List<AppUser>
@{
    ViewData["Title"] = "ListTrainers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-bordered" style="text-align: center; vertical-align: middle;">
                <thead>
                    <tr>
                        <th colspan="6" style="text-align: center; font-size: 25px">Antrenör Listesi</th>
                    </tr>
                    <tr>
                        <th style="width: 50px">#</th>
                        <th>Antrenör</th>
                        <th>Branş</th>
                        <th>Kullanıcı İsmi</th>
                        <th>Mail</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td style="display: none">@item.TrainerId</td>
                            <td>@item.Name @item.Surname</td>
                            <td>@item.Branch</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td class="border px-4 py-2 text-center w-1/7">
                                <a asp-area="Admin" asp-controller="Trainer" asp-action="DeleteTrainer" asp-route-id="@item.TrainerId" class="btn btn-danger">
                                    Kaydı Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="container">
                <div class="row justify-content-center">
                    <a asp-area="Admin" asp-controller="Trainer" asp-action="AddTrainer" class="btn btn-outline-success">Antrenör Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
