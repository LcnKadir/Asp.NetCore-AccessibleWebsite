@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-bordered" style="text-align: center; vertical-align: middle;">
                <thead>
                    <tr>
                        <th colspan="6" style="text-align: center; font-size: 25px">Branş Listesi</th>
                    </tr>
                </thead>
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        {
                            <tr>
                                <td style="display: none">@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="container">
                <div class="row justify-content-center">
                    <a class="btn btn-outline-success" asp-area="" asp-controller="Classes" asp-action="Index">Branş Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

