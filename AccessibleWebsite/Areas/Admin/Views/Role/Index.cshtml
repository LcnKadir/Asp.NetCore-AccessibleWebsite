@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}
<br />
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered" style="text-align: center; vertical-align: middle;">
                    <thead>
                        <tr>
                            <th colspan="6" style="text-align: center; font-size: 25px">Üye Listesi</th>
                        </tr>
                        <tr>
                            <th style="width: 50px">#</th>
                            <th>Rol Adı</th>
                            <th>Rolu Sil</th>
                            <th>Rolu Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>

                                <td>
                                    <a asp-area="Admin" asp-controller="Users" asp-action="RemoveRestriction" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                        Güncelle
                                    </a>
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class=" alert alert-danger">
        <span> Herhangi bir rol bulunamadı</span>
    </div>
}

<a asp-area="Admin" asp-controller="Role" asp-action="CreateRole" class="btn btn-outline-primary">Yeni Rol Girişi</a>